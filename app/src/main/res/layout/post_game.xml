<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/layout_postgame"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:orientation="vertical"
        android:visibility="visible"
        tools:layout_editor_absoluteX="80dp"
        tools:layout_editor_absoluteY="119dp">

        <TextView
            android:id="@+id/text_status"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_horizontal"
            android:text="Player Win!"
            android:textAlignment="gravity"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_winlossamount"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_horizontal"
            android:text="+ $10"
            android:textAlignment="gravity"
            android:textColor="#4CAF50"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_total"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_horizontal"
            android:text="Total: $10000"
            android:textAlignment="gravity"
            android:textSize="30sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/layout_betting"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_saysbet"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="TextView"
                android:textAlignment="textEnd"
                android:textSize="30sp"
                tools:text="Bet:" />

            <TextView
                android:id="@+id/text_betamount"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:inputType="number"
                android:textAlignment="textStart"
                android:textSize="30sp"
                tools:text="10000" />
        </LinearLayout>

        <Button
            android:id="@+id/button_startagain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Start" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
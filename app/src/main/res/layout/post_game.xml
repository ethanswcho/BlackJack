<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/layout_postgame"
        android:layout_width="316dp"
        android:layout_height="470dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent=".5"
        app:layout_constraintHorizontal_bias="0.528"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent=".5">

        <TextView
            android:id="@+id/text_status"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:gravity="center_horizontal"
            android:text="Player Win!"
            android:textAlignment="gravity"
            android:textSize="40sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_winlossamount"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:gravity="center_horizontal"
            android:text="+ $10"
            android:textAlignment="gravity"
            android:textColor="#4CAF50"
            android:textSize="40sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_total"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:gravity="center_horizontal"
            android:text="Total: $10000"
            android:textAlignment="gravity"
            android:textSize="40sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/layout_betting"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_marginTop="0dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_saysbet"
                android:layout_width="125dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Bet:"
                android:textAlignment="textEnd"
                android:textSize="30sp" />

            <EditText
                android:id="@+id/text_betamount"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:inputType="number"
                android:maxLength="5"
                android:textAlignment="textStart"
                android:textSize="30sp"
                tools:text="10000" />
        </LinearLayout>

        <Button
            android:id="@+id/button_playagain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Play Again!"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/text_error"
            android:layout_width="250dp"
            android:layout_height="130dp"
            android:layout_marginBottom="12dp"
            android:text="TextView"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:visibility="invisible"
            app:layout_constraintWidth_percent=".5" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>